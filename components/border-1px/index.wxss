.border-1px {
    position: relative;
}
.border-1px::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    /* height: 200%; */
    transform: scale(0.5);
    transform-origin: 0 0;
    pointer-events: none;
    box-sizing: border-box;
    border: 0 solid #dbdbdb;
    /* border-top-width: 1px; */
    border-bottom-width: 1px;
}